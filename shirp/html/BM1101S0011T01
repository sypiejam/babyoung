		<script>
			// 스탠다드시트 노출 시 바닥페이지 스크롤 고정
			$(document).ready(()=>{
				var bottomHandle = function(){
					setTimeout(function(){
						if($('.standard-sheet').hasClass('show')){
							UI.bodyHold(true);
						}else{
							UI.bodyHold(false);
						}
					},100);
				}
				$(document).on('click','.irp24-slide-btm .standard-sheet-handle',bottomHandle);
			});

			// 스탠다드시트 노출 시 상단 이동 버튼 위치 변경
			const flag = document.querySelector(".standard-sheet");
			const btnTop = document.querySelector(".ui-btn-top");
			window.addEventListener("load", () => {
				if (flag !== null) {
					btnTop.style.bottom = "160px";
				}
			});

			const myModalObj01 = new UI.ModalPopup("#modalPopup01"); //평가금액 툴팁

			const topBtn = document.querySelector(".ui-btn-top");
			window.addEventListener("scroll", () => {
				if (window.pageYOffset > 100) {
					topBtn.classList.add("view");
				} else {
					topBtn.classList.remove("view");
				}
			});
			function moveTop() {
				window.scrollTo({ top: 0, behavior: "smooth" });
			}

			// 직접설정 체크시 날짜 선택 영역 노출
			$(function(){
				$('input[name=monthSelector]').click(function () {
					if ($('#directMonth').is(":checked")) {
						$('.date-range-wrap').show();
					} else {
						$('.date-range-wrap').hide();
					}
				})
			});

			// 내 상품 스크롤 포커싱
			$(".irp24-asset-list .legend-item").click(function(){
				var link_name = $(this).attr("data-link");
				$("[data-anchor="+ link_name +"]").click();
			});

			var tabPos = $('.irp24-myrp-product').offset().top - 0;
			var prodCardScrollTop = function(e){
				var _this = $(e);
				if(window.pageYOffset <= tabPos){
					$('body, html').animate({ scrollTop: tabPos}, 400);
				}
			}
			$('.irp24-myrp-product .tab-list .tab-item').click((e)=>{
				prodCardScrollTop($(this));
			});
			$('.irp24-myrp-tabcont .segment-tabs .tab-item').click(()=>{
				setTimeout(function(){
					tabPos = $('.irp24-myrp-product').offset().top;
				},100);
			});

			// 내 상품 펼치기/접기 버튼 
			$(".btn-more-wrap>.more").click(function () {
				var ell = $(this).parents(".list-more-view").find(".list-wrap");
				if ($(this).hasClass("on")) {
					$(this).removeClass("on").find("span").text("펼치기");
					ell.removeClass("is-open");
				} else {
					$(this).addClass("on").find("span").text("접기");
					ell.addClass("is-open");
				}
			});

			// 24-09-04 IRP2024 : 추가
			// 구성 탭 더보기
			$(".js-more-control").click(function(){
				$(".irp24-asset-list").find(".list-hidden").prop('hidden', false);
			})

			// 24-11-21 IRP2024 : 내 상품 토글탭 가로스크롤 오류(ios) 대응
			$('.irp24-myrp-product .toggle-tabs .toggle').click(function(){
				setTimeout(function () {
					UI.TabsUpdate('.toggle-tabs');
				},100);
			});
		</script>
	</body>
</html>

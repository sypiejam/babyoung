<!-- 퍼블 확인용 : 삭제버튼 -->
<script>
    $(document).on('focusin', '.inp_field', function(e){
        let inputTxt = $(this).find('.inp_text');
        let clearBtn = $(this).find('.inp_delete');

        clearBtn.click(function(){
            inputTxt.val('').text('');
            inputTxt.focus();
        })
    });
</script>

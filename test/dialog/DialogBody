import styled from 'styled-components';

/**
 * 
 * @name DialogBody
 * @role 다이얼로그 컨텐츠 영역 상위 컴포넌트입니다.
 * 
 */ 

function DialogBody({ children }) {

    return <StyledDialogBody>{children}</StyledDialogBody>;
}

const StyledDialogBody = styled.div`// 퍼블검수 1차 : 수정
    overflow-y:auto;
    max-height:100%;
    color:#4c5459;
    font-size:1.5rem;

    > .inner {
        margin:0 0 0.8rem;
    }
`;

export default DialogBody;
